   ("lock"               "#bebebe")
   ("output-background"  #f)
   ("junction"           "#ffff00")
   ("mesh-grid-major"    "#1e1e1e")
   ("mesh-grid-minor"    "#171717")
   ("freestyle0"         "#ff00ff")
   ("freestyle1"         "#ffa5ff")
